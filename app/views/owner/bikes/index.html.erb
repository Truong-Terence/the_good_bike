<div class="container col-7 mt-2">
  <%= simple_form_for(@owner_bike) do |f| %>
    <div class="form-group bg-light p-4">
      <div class="d-flex justify-content-between">
        <%= f.input :name, class:"form-control" %>
        <%= f.input :size, class:"form-control" %>
        <%= f.input :kind, collection: Bike::KIND, class:"form-control" %>
      </div>
      <%= f.input :address, class:"form-control" %>
      <%= f.input :description, class:"form-control" %>
        <%= f.input :price_per_day, class:"form-control" %>
      <div class="d-flex justify-content-between">
        <%= f.file_field :images, multiple: true %>
        <%= f.submit "Create my bike !", class: "btn btn-info btn-sm ml-4"%>
      </div>
    </div>
  <% end %>

  <div>
      <% @owner_bikes.each do |bike| %>
        <div class="card mb-3">
          <div class="row g-0">
            <div class="col-md-8">
              <div class="card-body">
                <div class="d-flex p-1 justify-content-between">
                  <h5 class="card-title"><%= bike.name %></h5>
                  <p class="user-name card-text"><small class="text-muted">by <%= bike.user.first_name %> <%= bike.user.last_name.upcase %></small></p>
                </div>
                <p class="card-text bike-description"><%= bike.description %></p>
                <div class="price-card d-flex flex-row-reverse">
                  <p class="m-0 pr-3"><%= bike.price_per_day %>â‚¬/Day</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
</div>
