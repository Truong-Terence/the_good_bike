<div class="row">
  <div class="container col-6">
    <div>
      <%= simple_form_for :search, url: root_path, method: "GET", html: {class:"d-flex justify-content-between p-4 form-inline"} do |f| %>
          <%= f.input :kind, placeholder: 'Whick bike you looking for?', class: "flex-left", label:false %>
          <%= f.input :address, placeholder: 'Where do you go ?', class:'flex-right ml-5', label:false%>
	        <%= f.submit "Search", class:"btn btn-info mt-2" %>
      <% end %>
    </div>
    <div>
      <% @bikes.each do |bike| %>
        <div class="card mb-3">
          <div class="row g-0">
            <div class="col-md-4">
              <%= cl_image_tag bike.photos[0].key, height: 300, width: 400, crop: :fill, class: "img-fluid rounded-start" %>
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <div class="d-flex p-1 justify-content-between">
                  <h5 class="card-title"><%= bike.name %></h5>
                  <p class="user-name card-text"><small class="text-muted">by <%= bike.user.first_name %> <%= bike.user.last_name.upcase %></small></p>
                </div>
                <p class="card-text bike-description"><%= bike.description %></p>
                <div class="price-card d-flex flex-row-reverse">
                  <%= link_to "view more", bike_path(bike), class: "btn btn-sm btn-info" %>
                  <p class="m-0 pr-3"><%= bike.price_per_day %>â‚¬/Day</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

    <div class="col-5">
        <div id="map"
          style="width: 100%; height: 600px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
    </div>
  </div>
</div>
