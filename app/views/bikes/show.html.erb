<%= render 'shared/navbar_pages' %>
<div class="row justify-content-md-center ">

  <div class="col-md-10 p-0 d-flex justify-content-md-center mt-4 position-relative">

    <div class="content-img col-md-5">
    <%= link_to "< back to index", bikes_path, class: "text-info back_to_index" %>
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <%= cl_image_tag @bike.photos[0].key, crop: :fill %>
            </div>
            <% unless @bike.photos[1].nil? %>
              <div class="carousel-item">
                <%= cl_image_tag @bike.photos[1].key, crop: :fill %>
              </div>
              <div class="carousel-item">
                <%= cl_image_tag @bike.photos[2].key, crop: :fill %>
              </div>
            <% end %>
          </div>
          <button class="carousel-control-prev" type="button" data-target="#carouselExampleControls" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-target="#carouselExampleControls" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </button>
        </div>
    </div>
    <div class="content-right col-md-5 p-3 pl-5">
      <div class="content-name-price d-flex justify-content-between border-bottom">
        <h2><strong><%= @bike.name %></strong></h2>
        <span class="d-flex align-items-end text-info"><h2><strong><%= @bike.price_per_day %>â‚¬</strong></h2>&nbsp;<h4>/day</h4></span>
      </div>
      <div class="content-description">
        <div class="bike-rating d-flex w-100 pt-3">
          <i class="fas fa-star text-info "></i>
          <i class="fas fa-star text-info "></i>
          <i class="fas fa-star text-info "></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <p class="m-0"><!--Here Rating-->3.9/5</p><%= link_to 'See all reviews' , bikes_path , class: "ml-3"%>
        </div>
        <div class="bike-description pt-3">
          <p><%= @bike.description %></p>
        </div>
        <div class="bike-kind">
          <span class="d-flex"><%= image_tag ("bike_show/biking-solid.svg"), height: "20px" %> <p class="ml-3"><%= @bike.kind %></p></span>
        </div>
        <div class="bike-size">
          <span class="d-flex"><%= image_tag ("bike_show/arrows-alt-v-solid.svg"), height: "20px" %> <p class="ml-3"><%= @bike.size %>ch</p></span>
        </div>
        <div class="bike-address">
          <span class="d-flex"><%= image_tag ("bike_show/map-marker-alt-solid.svg"), height: "20px" %> <p class="ml-3"><%= @bike.address %></p></span>
        </div>
        <div class="bike-options">
          <span class="d-flex"><strong><p>Options : </p></strong>
            <%= image_tag ("bike_show/protective.png"), height: "25px", class: "ml-3" %>
            <%= image_tag ("bike_show/pump.png"), height: "25px", class: "ml-3" %>
            <%= image_tag ("bike_show/child.png"), height: "25px", class: "ml-3" %>
          </span>
        </div>

      </div>
      <div class="content-booking border-top mt-2">
        <h2 class="mt-3">Booking this bike</h2>


        <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />
          <%= simple_form_for [@bike, @bike.bookings.new], method: "get" do |f| %>
            <span class="d-flex justify-content-between">
            <%= f.input :start_at, as: :string, required: false, input_html: {class: "datepicker", id: "start-date"} %>
            <%= f.input :end_at, as: :string, required: false, input_html: {class: "datepicker", id: "end-date"} %>
            </span>
            <h3 id="total-price" data-priceperday="<%= @bike.price_per_day %>" class="mt-3 font-weight-bold text-info text-right"></h3>
            <%= f.button :submit, "Book now !", class: "btn btn-info rounded w-100 mt-3 h-25" %>
          <% end %>
      </div>
    </div>
  </div>
</div>
