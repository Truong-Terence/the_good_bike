<div class="w-100 content d-flex">
  <div class="col-md-7 content-left d-flex justify-content-center">
    <div class="bike_card shadow">
      <div class="thumbnail_bike">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <%= cl_image_tag @bike.photos[0].key, crop: :fill %>
            </div>
            <% unless @bike.photos[1].nil? %>
              <div class="carousel-item">
                <%= cl_image_tag @bike.photos[1].key, crop: :fill %>
              </div>
              <div class="carousel-item">
                <%= cl_image_tag @bike.photos[2].key, crop: :fill %>
              </div>
            <% end %>
          </div>
          <button class="carousel-control-prev" type="button" data-target="#carouselExampleControls" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-target="#carouselExampleControls" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </button>
        </div>
      </div>
      <div class="details_bike p-3 d-flex flex-column justify-content-center border-top">
        <span class="d-flex align-item-center"><h4><strong><%= @bike.name %></strong></h4>&nbsp;&nbsp;<p><%= @bike.kind %></p></span>
        <p><i class="fas fa-level-up-alt"></i>&nbsp;<%= @bike.size %>ch</p>
        <p><i class="fas fa-map-marker-alt"></i> <%= @bike.address %></p>
        <h3 class="font-weight-bolder text-info"><strong><%= @bike.price_per_day %>â‚¬</strong> / day</h3>
        <p><%= @bike.description %></p>

      </div>
      <div class="bookings_bike border-top p-3 align-items-start justify-content-start d-flex flex-column">
        <h4>Booking this bike</h4>

        <%= simple_form_for [@bike, @bike.bookings.new] do |f| %>
          <div class="form-group">
            <%= f.input :start_at, class:"form-control" %>
            <%= f.input :end_at, class:"form-control" %>
            <%= link_to "Back to Home", bikes_path, class:"btn btn-info btn-sm mt-4"%>
            <%= f.submit "Booking this bike !", class: "btn btn-info btn-sm mt-4"%>
          </div>
        <% end %>






      </div>
    </div>
  </div>
  <div class="col-md-5 content-right">
    <div id="map"
        style="width: 100%; height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
