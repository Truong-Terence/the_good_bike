<%# Div en tant que background %>
<div class="geo-form"></div>

<div class="container py-4">
  <div class="searching-form w-100 d-flex justify-content-around">
    <%= simple_form_for :search, url: root_path, method: "GET", html: {class:"p-4 form-inline"} do |f| %>
      <div>
        <%= f.input :kind, placeholder: 'Whick bike you looking for?', label: false %>
      </div>
      <div class="mx-5">
        <%= f.input :address, placeholder: 'Where do you go ?', label: false%>
      </div>
      <%= f.submit "Search", class:"btn btn-primary" %>
    <% end %>
  </div>
  <div id="carouselExampleControls" class="carousel slide w-100" data-ride="carousel">
    <div class="carousel-inner rounded">
      <div class="carousel-item active">
        <%= image_tag "banner-image.jpg", class:"d-block w-100"%>
        <div class="carousel-caption d-none d-md-block">
          <h2>Fun visit with friends </h2>
        </div>
      </div>
      <div class="carousel-item">
        <%= image_tag "thrill-bike.jpg", class:"d-block w-100"%>
        <div class="carousel-caption d-none d-md-block">
          <h2>Get some thrills</h2>
        </div>
      </div>
      <div class="carousel-item">
        <%= image_tag "solo-park.jpg", class:"d-block w-100"%>
        <div class="carousel-caption d-none d-md-block">
          <h2>Going outside for a chill ride</h2>
        </div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <br>
  <br>
  <br>




  <div class="tuto text-center col-12 position-relative">
    <h2>How it works</h2>
    <h6><strong>The good bike helps people to rent bike all over the world</strong></h6>
    <p class="col-12 col-lg-7 mx-auto">The good bike bike rental and sharing service that provides a platform to connect bike owners with people looking to rent bike around the world. Through our service, owners list their bikes, renters search for a bike in whatever area they want, and complete the rental process easily through our web application</p>
    <div class="card-container">
      <div class="row">
        <div class="card-category col-lg-4 col-12">
          <%= link_to 'Find your bike', bikes_path %>
        </div>
        <div class="card-category col-lg-4 col-12">
          <%= link_to 'Book it', '#' %>
        </div>
        <div class="card-category col-lg-4 col-12">
          <%= link_to 'Ride it', '#' %>
        </div>
      </div>
    </div>
  </div>
  <br>
  <br>
  <br>
  <br>

  <%# Put a map with all offers in france(exemple) without filter kind %>
  <div class="container">
    <div id="map" class="banner-map w-100 h-25"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>

  <hr>

  <div class="info d-flex justify-content-around">
    <div class="rewards">
      <h3>Our service is multi rewarded</h3>
      <div class="badges">
        <p>First place, new commer award</p>
        <p>Most rised start up France</p>
        <p>Favorite european application</p>
      </div>
    </div>
    <div class="comments">
      <p><strong>Community comments</strong></p>
      <span class="badge badge-pill badge-primary">Very usefull service</span>
      <span class="badge badge-pill badge-primary">It saved my vacation</span>
      <span class="badge badge-pill badge-primary">Amazing!</span>
    </div>
  </div>
</div>
