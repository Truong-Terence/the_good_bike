<%# Div en tant que background %>
<div class="geo-form"></div>

<div class="container py-3">

  <%= link_to root_path, class:"navbar-brand w-100" do %>
    <h1  class="d-flex align-items-end">THE G<lottie-player class="my-lottie-logo" src="https://assets7.lottiefiles.com/packages/lf20_uvovx5gl.json"  background="transparent"  speed="1"  style="width: 320px; height: 320px;" loop autoplay ></lottie-player>D BIKE</h1>
  <% end %>

  <div class="w-100 align-items-center mx-auto sticky">
    <div class="searching-form d-flex w-100 justify-content-center">
      <%= form_tag bikes_path, method: "GET", class:"p-3 form-inline" do %>
        <div>
          <%= text_field_tag :query,
          params[:query],
          class: "my-form-input-kind form-control",
          placeholder: "Find your bike" %>
        </div>
        <div>
          <%= text_field_tag :query,
          params[:query],
          class: "my-form-input-address form-control",
          placeholder: "Where do you go ?" %>
        </div>
        <%=  submit_tag "Search", class:"btn btn-info"%>
      <% end %>
    </div>
  </div>

  <div class="arrow-down bounce d-flex justify-content-center align-items-center"><i class="fas fa-caret-down"></i></div>




  <div class="tuto text-center col-12 mt-4">
  <div class="mt-5 mb-5">
    <h2>How it works</h2>
      <h6><strong>The good bike helps people to rent bike all over the world</strong></h6>
      <p class="col-12 col-lg-7 mx-auto">The good bike bike rental and sharing service that provides a platform to connect bike owners with people looking to rent bike around the world. Through our service, owners list their bikes, renters search for a bike in whatever area they want, and complete the rental process easily through our web application</p>
    </div>
    <div class="container">
      <div class="row">
        <div class="card-category col-lg-4 col-12 ">
          <%= link_to 'Find your bike', bikes_path%>
        </div>
        <div class="card-category col-lg-4 col-12 img">
          <%= link_to 'Book it', '#' %>
        </div>
        <div class="card-category col-lg-4 col-12 img">
          <%= link_to 'Ride it', '#' %>
        </div>
      </div>
    </div>
  </div>

  <br>
  <br>
  <br>
  <br>

  <%# Put a map with all offers in france(exemple) without filter kind %>
  <div class="container">
    <div id="map"
      style="width: 100%; height: 400px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>

<div class="footer d-flex justify-content-around">
  <div class="container">
    <div class="row">
      <div class="logo col-lg-4 col-12 ">
        <lottie-player class="my-lottie-logo" src="https://assets7.lottiefiles.com/packages/lf20_uvovx5gl.json"  background="transparent"  speed="0.5"  style="height: 150px;" loop autoplay ></lottie-player>
      </div>
      <div class="col-lg-4 col-12" id="social-platforms">
        <h3>Join us on</h3>
        <a class="btn btn-icon btn-facebook" href="#"><i class="fa fa-facebook"></i><span>Facebook</span></a>
        <a class="btn btn-icon btn-twitter" href="#"><i class="fa fa-twitter"></i><span>Twitter</span></a>
        <a class="btn btn-icon btn-instagram" href="#"><i class="fa fa-instagram"></i><span>Instagram</span></a>
        <a class="btn btn-icon btn-pinterest" href="#"><i class="fa fa-pinterest"></i><span>Pinterest</span></a>
      </div>
      <div class="rewards col-lg-4 my-3 col-12 text-center">
        <h3>Our service is multi rewarded</h3>
        <div class="badges">
          <p><i class="fas fa-award mr-2"></i>Most rised start up France</p>
          <p><i class="fas fa-award mr-2"></i>First place, new commer award</p>
          <p><i class="fas fa-award mr-2"></i>Favorite european application</p>
        </div>
      </div>
    </div>
  </div>
</div>
